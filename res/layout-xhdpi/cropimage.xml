<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include layout="@layout/gl_root_group"/>
	<!-- Begin: added by yuanhuawei 20130828 -->
	<!--change layout_height 50 to 45   textsize  by yuhuizhong 2014.12.04-->
	<LinearLayout android:id="@+id/crop_footer"
	    	android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView android:id="@+id/crop_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/iphone_crop_bottom_btn_bg"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:text="@string/iphone_crop_cancel_text"/>
            <View android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/iphone_crop_seperator_color"/>
            <TextView android:id="@+id/crop_done"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/iphone_crop_bottom_btn_bg"
				android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:text="@string/iphone_crop_done_text"/>
	</LinearLayout>
	<!-- End: added by yuanhuawei 20130828 -->
</RelativeLayout>
