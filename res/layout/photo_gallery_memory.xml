<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="574dp"
    android:background="#ffffff"
    android:visibility="visible">
    <RelativeLayout
        android:id="@+id/iphone_no_photo_memory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clickable="true"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iphone_memory_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="30dip"
                android:paddingLeft="8dip"
                android:paddingRight="8dip"
                android:src="@drawable/iphone_memory_play"/>
            <TextView
                android:id="@+id/iphone_memory_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dip"
                android:paddingLeft="8dip"
                android:paddingRight="8dip"
                android:textColor="@android:color/black"
                android:text="@string/iphone_gallery_add_photo_memory"
                android:textSize="35dip" />

            <TextView
                android:id="@+id/iphone_memory_mess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:gravity="center"
                android:paddingLeft="54dip"
                android:paddingRight="54dip"
                android:textSize="16dip"
                android:textColor="@android:color/black"
                android:text="@string/iphone_gallery_photo_memory_empty" />

            <TextView
                android:id="@+id/iphone_memory_start_user"
                android:layout_width="280dip"
                android:layout_height="37dip"
                android:layout_marginTop="154dip"
                android:layout_gravity="bottom|center_horizontal"
                android:gravity="center"
                android:background="@drawable/textview_memory_style"
                android:clickable="true"
                android:textSize="14dip"
                android:text="@string/iphone_gallery_start_user"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/iphone_memory_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:paddingLeft="64dp"
        android:paddingRight="64dp"
        android:clickable="true"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:text="@string/iphone_gallery_memory_scanned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff979797"/>
            <ProgressBar
                android:id="@+id/myprobarb"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/iphone_gallery_memory_frist_scanned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff979797"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/iphone_no_memory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clickable="true"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:text="@string/iphone_gallery_no_memory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:textColor="#ff979797"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>