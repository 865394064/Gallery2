<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/iphone_album_set_top_bar"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:background="@drawable/iphone_album_set_top_bar_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp">
           <TextView android:id="@+id/iphone_album_set_title"
               	android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_centerInParent="true"
                android:text="@string/iphone_album_set_title_text"
                android:textSize="15dp"
                android:textColor="@color/iphone_album_set_title_text_color"/> 
			
			<Button android:id="@+id/iphone_album_set_top_cancel_btn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:text="@android:string/cancel"
               android:textColor="@color/iphone_top_bar_btn_text_color"
               android:textSize="15dp"
               android:background="@android:color/transparent"
               android:visibility="gone"/>
        </RelativeLayout>
</RelativeLayout>
