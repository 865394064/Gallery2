<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/iphone_bottom_navigation_bar"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:background="@drawable/iphone_bottom_navigation_bar_bg">
        <LinearLayout android:id="@+id/iphone_album_bottom_navigation_bar_layout_normal"
			android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:visibility="visible">
           <TextView android:id="@+id/iphone_album_bottom_navigation_bar_photos"
               	android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
				android:gravity="center"
                android:drawableTop="@drawable/iphone_bottom_navigation_bar_photos_icon"
                android:text="@string/iphone_bottom_navigation_bar_photos_text"
                android:textSize="12dp"
                android:textColor="@color/iphone_bottom_navigation_bar_text_color"/>
            <!--begin: added by scq-->
           <TextView android:id="@+id/iphone_bottom_navigation_bar_memory"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
		  android:gravity="center"
                android:drawableTop="@drawable/iphone_bottom_navigation_memory_icon"
                android:text="@string/iphone_gallery_add_photo_memory"
                android:textSize="9dp"
                android:textColor="@color/iphone_bottom_navigation_bar_text_color"/>
               <!--end: added by scq-->
           <TextView android:id="@+id/share_icon"
               	android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
				android:gravity="center"
                android:drawableTop="@drawable/share_icon"
                android:text="@string/share"
                android:textSize="12dp"
                android:textColor="@color/iphone_bottom_navigation_bar_text_color"/>
           <TextView android:id="@+id/iphone_album_bottom_navigation_bar_albums"
               	android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
				android:gravity="center"
                android:drawableTop="@drawable/iphone_bottom_navigation_bar_albums"
                android:text="@string/iphone_bottom_navigation_bar_albums_text"
                android:textSize="12dp"
                android:textColor="@color/iphone_bottom_navigation_bar_text_color"/>
            
        </LinearLayout>
        
        <RelativeLayout android:id="@+id/iphone_album_bottom_navigation_bar_layout_select"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <ImageView 
                android:id="@+id/iphone_album_bottom_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/iphone_album_bottom_share_icon"
                android:clickable="false"/>
            
            <TextView android:id="@+id/iphone_album_bottom_add_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/iphone_album_bottom_add_to_text"
                android:textSize="15dp"
                android:textColor="@color/iphone_album_bottom_add_to_text_color"
				android:enabled="false"/>
            
            <ImageView android:id="@+id/iphone_album_bottom_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/iphone_album_bottom_delete_icon"
                android:clickable="false"/>
        </RelativeLayout>
        
        
</RelativeLayout>
