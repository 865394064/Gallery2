<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/iphone_bottom_navigation_bar"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:background="@drawable/iphone_bottom_navigation_bar_bg">
        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <TextView android:id="@+id/iphone_bottom_navigation_bar_photos"
               	android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
				android:gravity="center"
                android:drawableTop="@drawable/iphone_bottom_navigation_bar_photos_icon"
                android:text="@string/iphone_bottom_navigation_bar_photos_text"
                android:textSize="12dp"
                android:textColor="@color/iphone_bottom_navigation_bar_text_color"/>
                <!--begin: added by scq-->
           <TextView android:id="@+id/iphone_bottom_navigation_bar_memory"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
		  android:gravity="center"
                android:drawableTop="@drawable/iphone_bottom_navigation_memory_icon"
                android:text="@string/iphone_gallery_add_photo_memory"
                android:textSize="9dp"
                android:textColor="@color/iphone_bottom_navigation_bar_text_color"/>
               <!--end: added by scq-->
           <TextView android:id="@+id/share_icon"
               	android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
				android:gravity="center"
                android:drawableTop="@drawable/share_icon"
                android:text="@string/share"
                android:textSize="12sp"
                android:textColor="@color/iphone_bottom_navigation_bar_text_color"/>
           <TextView android:id="@+id/iphone_bottom_navigation_bar_albums"
               	android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
				android:gravity="center"
                android:drawableTop="@drawable/iphone_bottom_navigation_bar_albums"
                android:text="@string/iphone_bottom_navigation_bar_albums_text"
                android:textSize="12dp"
                android:textColor="@color/iphone_bottom_navigation_bar_text_color"/>
            
        </LinearLayout>
</RelativeLayout>
